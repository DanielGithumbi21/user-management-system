<div class="row">
    <div class="col-6"><h1>Users</h1></div>
    <div class="col-6 d-flex justify-content-end">
        <a href="/adduser" class="btn btn-primary btn-sm align-self-center"> + add user</a>
    </div>
</div>



    <table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">First</th>
      <th scope="col">Last</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col" class="text-end">Action</th>



    </tr>
  </thead>
  <tbody>
      {{#each rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.firstName}}</td>
      <td>{{this.lastName}}</td>
      <td>{{this.Email}}</td>
      <td>{{this.phone}}</td>
      <td class="text-end">
        <a href="#" class="btn btn-small btn-light"><i class="fa fa-eye"> View</i></a>
        <a href="/edituser/{{this.id}}" class="btn btn-small btn-light"><i class="fa fa-pencil"> Edit</i></a>
        <a href="#" class="btn btn-small btn-light"><i class="fa fa-trash-o"> Delete</i></a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
